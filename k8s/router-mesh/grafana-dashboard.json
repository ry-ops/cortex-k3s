{
  "dashboard": {
    "title": "LLM Router Mesh - LLM-D Cascade",
    "tags": ["router", "llm", "llm-d", "mcp"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Routing Decisions by Layer",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(router_decisions_total[5m])) by (layer)",
            "legendFormat": "{{layer}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Cache Hit Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(router_cache_hits_total[5m]) / (rate(router_cache_hits_total[5m]) + rate(router_cache_misses_total[5m]))",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "percentunit"
        }
      },
      {
        "id": 3,
        "title": "Time to First Token (TTFT) - P50/P90/P99",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(router_ttft_seconds_bucket[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(router_ttft_seconds_bucket[5m])) by (le))",
            "legendFormat": "P90",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(router_ttft_seconds_bucket[5m])) by (le))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 4,
        "title": "Prefill vs Decode Latency",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.90, sum(rate(router_prefill_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "Prefill (L1) P90",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(router_decode_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "Decode (L2) P90",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 5,
        "title": "Route Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(rate(router_decisions_total[5m])) by (route)",
            "legendFormat": "{{route}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Endpoint Load",
        "type": "bargauge",
        "targets": [
          {
            "expr": "router_endpoint_load",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 7,
        "title": "Active Requests",
        "type": "timeseries",
        "targets": [
          {
            "expr": "router_active_requests",
            "legendFormat": "Active Requests",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Error Rate by Type",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(router_errors_total[5m])) by (type)",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ],
    "refresh": "10s",
    "schemaVersion": 38,
    "version": 1
  }
}
