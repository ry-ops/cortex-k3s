{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "worker-spec.schema.json",
  "title": "Worker Specification",
  "description": "Schema for worker specification files",
  "type": "object",
  "required": ["worker_id", "worker_type", "parent_master", "task_id", "status", "created_at", "created_by"],
  "additionalProperties": false,
  "properties": {
    "worker_id": {
      "type": "string",
      "pattern": "^(dev|sec|inv|cicd)-worker-[A-F0-9]{8}$|^worker-(scan|implementation)-[0-9]{3}$|^test-worker-LAUNCHER-[0-9]{3}$",
      "description": "Unique worker identifier"
    },
    "worker_type": {
      "type": "string",
      "enum": [
        "feature-implementer",
        "bug-fixer",
        "refactorer",
        "optimizer",
        "scan-worker",
        "audit-worker",
        "compliance-worker",
        "penetration-tester",
        "implementation-worker",
        "test-worker",
        "review-worker",
        "doc-worker",
        "pr-worker",
        "dashboard-update-worker"
      ],
      "description": "Worker specialization type"
    },
    "prompt_template": {
      "type": "string",
      "pattern": "^agents/prompts/workers/.*\\.md$",
      "description": "Path to worker prompt template"
    },
    "parent_master": {
      "type": "string",
      "enum": ["development", "security", "inventory", "cicd", "coordinator"],
      "description": "Master agent that spawned the worker"
    },
    "task_id": {
      "type": "string",
      "pattern": "^(task-[0-9]+|test-task-[0-9]+|task-[a-zA-Z0-9-]+)$",
      "description": "Associated task ID"
    },
    "task_data": {
      "type": "object",
      "description": "Complete task data"
    },
    "context": {
      "type": "object",
      "properties": {
        "master_session": {
          "type": "string",
          "pattern": "^[A-F0-9]{8}-[A-F0-9]{4}-[A-F0-9]{4}-[A-F0-9]{4}-[A-F0-9]{12}$"
        },
        "expertise_area": {
          "type": "string"
        },
        "skills_required": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "knowledge_base_refs": {
          "type": "object",
          "properties": {
            "implementation_patterns": {
              "type": "string"
            },
            "architecture_docs": {
              "type": "string"
            },
            "security_policies": {
              "type": "string"
            },
            "vulnerability_db": {
              "type": "string"
            }
          }
        },
        "relevant_past_implementations": {
          "type": "array",
          "description": "RAG-retrieved past patterns"
        }
      },
      "additionalProperties": true
    },
    "resources": {
      "type": "object",
      "required": ["token_allocation"],
      "properties": {
        "token_allocation": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 200000,
          "description": "Allocated token budget"
        },
        "time_limit_minutes": {
          "type": "integer",
          "minimum": 1,
          "maximum": 480,
          "description": "Time limit in minutes"
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["pending", "active", "running", "completed", "failed", "cancelled", "stuck", "zombie"],
      "description": "Worker execution status"
    },
    "created_at": {
      "type": "string",
      "description": "Worker creation timestamp"
    },
    "created_by": {
      "type": "string",
      "enum": ["development", "security", "inventory", "cicd", "coordinator", "daemon"],
      "description": "Entity that created the worker"
    },
    "execution": {
      "type": "object",
      "properties": {
        "started_at": {
          "type": "string",
          "format": "date-time"
        },
        "completed_at": {
          "type": "string",
          "format": "date-time"
        },
        "duration_seconds": {
          "type": "number",
          "minimum": 0
        },
        "tokens_used": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "completed_at": {
      "type": "string",
      "description": "Completion timestamp"
    },
    "git_workflow": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["success", "failed", "pending", "skipped"]
        },
        "commit_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{7,40}$"
        },
        "branch": {
          "type": "string"
        },
        "automated": {
          "type": "boolean"
        }
      }
    },
    "result": {
      "type": "object",
      "description": "Worker execution result"
    },
    "error": {
      "type": "string",
      "description": "Error message if worker failed"
    },
    "heartbeat": {
      "type": "object",
      "description": "Worker heartbeat and health monitoring data",
      "properties": {
        "last_heartbeat": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of last heartbeat"
        },
        "heartbeat_sequence": {
          "type": "integer",
          "minimum": 0,
          "description": "Monotonically increasing heartbeat counter"
        },
        "health": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "enum": ["healthy", "degraded", "unhealthy", "unresponsive"],
              "description": "Worker health status"
            },
            "health_score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Overall health score (0-100)"
            },
            "cpu_usage_percent": {
              "type": "number",
              "minimum": 0,
              "description": "CPU usage percentage"
            },
            "memory_usage_mb": {
              "type": "number",
              "minimum": 0,
              "description": "Memory usage in megabytes"
            },
            "tokens_used": {
              "type": "integer",
              "minimum": 0,
              "description": "Tokens consumed so far"
            },
            "tokens_remaining": {
              "type": "integer",
              "minimum": 0,
              "description": "Tokens remaining in budget"
            },
            "active_for_seconds": {
              "type": "integer",
              "minimum": 0,
              "description": "Time worker has been active in seconds"
            },
            "last_activity": {
              "type": "string",
              "description": "Description of last worker activity"
            }
          },
          "required": ["status"]
        },
        "warnings": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Current health warnings"
        },
        "missed_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of consecutive missed heartbeats"
        }
      },
      "required": ["last_heartbeat", "heartbeat_sequence", "health"]
    },
    "review": {
      "type": "object",
      "description": "Quality review loop configuration for worker output",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Whether review loops are enabled for this worker"
        },
        "min_cycles": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "default": 1,
          "description": "Minimum number of review cycles required"
        },
        "max_cycles": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "default": 3,
          "description": "Maximum number of review cycles allowed"
        },
        "auto_approve_threshold": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.95,
          "description": "Confidence threshold for automatic approval"
        },
        "confidence_threshold": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.85,
          "description": "Minimum confidence for approval"
        },
        "history": {
          "type": "array",
          "description": "Review cycle history",
          "items": {
            "type": "object",
            "properties": {
              "cycle": {
                "type": "integer",
                "minimum": 1
              },
              "timestamp": {
                "type": "string",
                "format": "date-time"
              },
              "confidence": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "approved": {
                "type": "boolean"
              },
              "feedback": {
                "type": "string"
              },
              "suggestions": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "issues": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "final_result": {
          "type": "object",
          "description": "Final review outcome",
          "properties": {
            "approved": {
              "type": "boolean"
            },
            "final_confidence": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "total_cycles": {
              "type": "integer",
              "minimum": 0
            },
            "escalated": {
              "type": "boolean"
            },
            "completed_at": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      }
    }
  }
}
