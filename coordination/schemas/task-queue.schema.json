{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "task-queue.schema.json",
  "title": "Task Queue",
  "description": "Schema for the complete task queue file",
  "type": "object",
  "required": ["tasks"],
  "additionalProperties": false,
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "$ref": "task-queue-entry.schema.json"
      },
      "description": "Array of task entries"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "last_updated": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
        }
      }
    }
  }
}
