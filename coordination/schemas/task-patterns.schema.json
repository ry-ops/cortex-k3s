{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "task-patterns.schema.json",
  "title": "Task Patterns (Long-term Memory)",
  "description": "Schema for learned task patterns in long-term memory",
  "type": "object",
  "required": [],
  "additionalProperties": true,
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Schema version (semver)"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["pattern_id", "keywords", "master", "confidence"],
        "properties": {
          "pattern_id": {
            "type": "string",
            "pattern": "^pattern-[0-9]+$",
            "description": "Pattern identifier"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 2
            },
            "minItems": 1,
            "description": "Keywords that trigger this pattern"
          },
          "master": {
            "type": "string",
            "enum": ["development", "security", "inventory", "cicd"],
            "description": "Target master for this pattern"
          },
          "worker_type": {
            "type": "string",
            "description": "Recommended worker type"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Pattern confidence score"
          },
          "success_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of successful matches"
          },
          "total_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Total number of matches"
          },
          "last_matched": {
            "type": "string",
            "format": "date-time",
            "description": "Last match timestamp"
          },
          "context_hints": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Additional context indicators"
          }
        }
      }
    },
    "statistics": {
      "type": "object",
      "properties": {
        "total_patterns": {
          "type": "integer",
          "minimum": 0
        },
        "avg_confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "high_confidence_patterns": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
