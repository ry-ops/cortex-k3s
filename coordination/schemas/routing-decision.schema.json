{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "routing-decision.schema.json",
  "title": "Routing Decision",
  "description": "Schema for MoE routing decisions logged to JSONL files",
  "type": "object",
  "required": ["task_id", "routed_to", "timestamp"],
  "additionalProperties": true,
  "properties": {
    "task_id": {
      "type": "string",
      "pattern": "^(task-[0-9]+|test-task-[0-9]+)$",
      "description": "Task identifier"
    },
    "task_title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 200,
      "description": "Task title for reference"
    },
    "task_type": {
      "type": "string",
      "description": "Task type classification"
    },
    "routed_to": {
      "type": "string",
      "pattern": "^(development|security|inventory|cicd)(-master)?$",
      "description": "Master agent task was routed to"
    },
    "rule_used": {
      "type": "string",
      "description": "Routing rule applied"
    },
    "pattern_matched": {
      "type": "string",
      "description": "Regex pattern that matched"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Routing confidence score (0.0-1.0)"
    },
    "priority": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low"],
      "description": "Task priority"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of routing decision"
    },
    "reasoning": {
      "type": "string",
      "description": "Human-readable routing rationale"
    },
    "outcome": {
      "type": "string",
      "enum": ["assigned", "pending", "failed", "escalated"],
      "description": "Routing outcome"
    },
    "keywords_matched": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Keywords that triggered routing"
    },
    "repository": {
      "type": "string",
      "description": "Target repository"
    },
    "estimated_tokens": {
      "type": "integer",
      "minimum": 0,
      "description": "Estimated token requirement"
    },
    "estimated_effort": {
      "type": "string",
      "enum": ["SMALL", "MEDIUM", "LARGE", "XLARGE"],
      "description": "Estimated effort level"
    },
    "estimated_duration": {
      "type": "string",
      "description": "Human-readable duration estimate"
    },
    "handoff_id": {
      "type": "string",
      "description": "Associated handoff ID"
    },
    "related_tasks": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(task-[0-9]+|test-task-[0-9]+)$"
      },
      "description": "Related task IDs"
    }
  }
}
