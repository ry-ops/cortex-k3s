{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "pool-state.schema.json",
  "title": "Worker Pool State",
  "description": "Schema for worker pool state in working memory",
  "type": "object",
  "required": ["updated_at"],
  "additionalProperties": true,
  "properties": {
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "total_capacity": {
      "type": "integer",
      "minimum": 1,
      "description": "Maximum worker pool size"
    },
    "active_workers": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of currently active workers"
    },
    "available_slots": {
      "type": "integer",
      "minimum": 0,
      "description": "Available worker slots"
    },
    "activation_level": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Pool activation level (0.0-1.0)"
    },
    "workers_by_type": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "integer",
          "minimum": 0
        }
      },
      "description": "Worker count by type"
    },
    "workers_by_master": {
      "type": "object",
      "properties": {
        "development": {
          "type": "integer",
          "minimum": 0
        },
        "security": {
          "type": "integer",
          "minimum": 0
        },
        "inventory": {
          "type": "integer",
          "minimum": 0
        },
        "cicd": {
          "type": "integer",
          "minimum": 0
        }
      },
      "description": "Worker count by master"
    },
    "queue_depth": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of tasks waiting for workers"
    },
    "avg_worker_duration_seconds": {
      "type": "number",
      "minimum": 0,
      "description": "Average worker execution time"
    }
  }
}
