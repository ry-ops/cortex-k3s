    "spot_instance": {
      "title": "Migrate {resource_name} to Spot Instances",
      "description": "Workload is fault-tolerant with {interruption_tolerance}/10 interruption tolerance. Spot instances will provide {savings_percentage}% savings.",
      "implementation_steps": [
        "Implement checkpoint/state saving for {workload_type}",
        "Configure spot instance request with diversification",
        "Set spot price limit to {spot_price_limit}",
        "Configure on-demand fallback ({fallback_percentage}%)",
        "Test interruption handling",
        "Monitor interruption rate for {monitoring_period} days",
        "Adjust configuration based on observed patterns"
      ],
      "validation_criteria": [
        "Interruption handling works correctly",
        "Workload completes successfully despite interruptions",
        "Interruption rate below {max_interruption_rate}%",
