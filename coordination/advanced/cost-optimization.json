{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "last_updated": "2025-12-09T10:00:00Z",

  "optimization_rules": {
    "right_sizing": {
      "enabled": true,
      "analysis_window_days": 30,
      "min_data_points": 2000,
      "thresholds": {
        "cpu": {
          "underutilized_avg": 30,
          "underutilized_p95": 60,
          "overutilized_avg": 85,
          "overutilized_p95": 90,
          "optimal_target_p95": 75
        },
        "memory": {
          "underutilized_avg": 40,
          "underutilized_p95": 65,
          "overutilized_avg": 90,
          "overutilized_p95": 95,
          "optimal_target_p95": 80
        },
        "disk_iops": {
          "underutilized_avg": 30,
          "overutilized_avg": 85
        },
        "network": {
          "underutilized_avg": 20,
          "overutilized_avg": 80
        }
      },
      "headroom_factors": {
        "steady_workload": 1.10,
        "periodic_workload": 1.15,
        "bursty_workload": 1.20
      },
      "min_monthly_savings": 50,
      "min_confidence": 70,
      "auto_implement_threshold": {
        "enabled": false,
        "min_confidence": 95,
        "max_downtime_minutes": 5,
        "require_approval": true
      }
    },

    "idle_resource_detection": {
      "enabled": true,
      "analysis_window_days": 7,
      "categories": {
        "completely_idle": {
          "idle_score_threshold": 90,
          "action": "tag_for_termination",
          "grace_period_days": 7,
          "notify_owner": true
        },
        "nearly_idle": {
          "idle_score_threshold": 70,
          "action": "investigate",
          "notify_owner": true
        },
        "zombie": {
          "action": "investigate",
          "notify_owner": true
        },
        "orphaned": {
          "action": "reclaim_or_terminate",
          "grace_period_days": 14,
          "notify_admin": true
        }
      },
      "idle_score_weights": {
        "cpu_idle": 0.40,
        "network_idle": 0.30,
        "request_idle": 0.20,
        "disk_idle": 0.10
      },
      "exemptions": {
        "tags": ["keep-alive", "disaster-recovery", "standby"],
        "resource_types": []
      }
    },

    "reserved_capacity": {
      "enabled": true,
      "analysis_window_days": 90,
      "minimum_uptime_percentage": 90,
      "reservation_options": {
        "1_year": {
          "enabled": true,
          "max_roi_months": 6,
          "payment_option": "partial_upfront",
          "upfront_percentage": 0.30
        },
        "3_year": {
          "enabled": true,
          "max_roi_months": 12,
          "payment_option": "partial_upfront",
          "upfront_percentage": 0.50,
          "min_savings_vs_1yr_multiplier": 2.0
        }
      },
      "savings_plans": {
        "enabled": true,
        "commitment_buffer": 0.90,
        "lookback_months": 12,
        "compute_sp_1yr_discount": 0.28,
        "compute_sp_3yr_discount": 0.42,
        "instance_sp_1yr_discount": 0.35,
        "instance_sp_3yr_discount": 0.54
      },
      "min_monthly_savings": 100
    },

    "spot_instances": {
      "enabled": true,
      "suitable_workload_types": [
        "batch_processing",
        "data_analysis",
        "ci_cd",
        "dev_test",
        "stateless_web",
        "queue_worker",
        "rendering",
        "simulation"
      ],
      "unsuitable_workload_types": [
        "database_primary",
        "stateful_application",
        "real_time_processing",
        "mission_critical"
      ],
      "min_interruption_tolerance": 7,
      "min_savings_percentage": 30,
      "strategies": {
        "full_spot": {
          "max_interruption_rate": 5,
          "max_price_volatility": 0.15,
          "spot_percentage": 100
        },
        "mixed_spot_on_demand": {
          "max_interruption_rate": 15,
          "max_price_volatility": 0.30,
          "spot_percentage": 60,
          "on_demand_percentage": 40
        },
        "spot_with_fallback": {
          "max_interruption_rate": 30,
          "max_price_volatility": 0.50,
          "spot_percentage": 80,
          "fallback_on_interruption": true
        }
      },
      "diversification": {
        "min_instance_types": 3,
        "min_availability_zones": 2,
        "allocation_strategy": "price-capacity-optimized"
      },
      "spot_price_limit": "on_demand_price"
    },

    "storage_tiering": {
      "enabled": true,
      "analysis_window_days": 90,
      "tiers": {
        "standard": {
          "min_access_frequency_per_month": 10,
          "storage_cost_per_gb": 0.023,
          "retrieval_cost_per_gb": 0.0,
          "request_cost_per_1000": 0.0004
        },
        "intelligent_tiering": {
          "min_access_frequency_per_month": 1,
          "max_access_frequency_per_month": 10,
          "storage_cost_per_gb": 0.023,
          "monitoring_cost_per_1000_objects": 0.0025,
          "retrieval_cost_per_gb": 0.0
        },
        "infrequent_access": {
          "min_access_frequency_per_month": 0.25,
          "max_access_frequency_per_month": 1,
          "storage_cost_per_gb": 0.0125,
          "retrieval_cost_per_gb": 0.01,
          "request_cost_per_1000": 0.001
        },
        "glacier_instant": {
          "max_days_since_last_access": 90,
          "storage_cost_per_gb": 0.004,
          "retrieval_cost_per_gb": 0.03,
          "request_cost_per_1000": 0.01
        },
        "glacier_flexible": {
          "avg_days_between_access": 365,
          "storage_cost_per_gb": 0.0036,
          "retrieval_cost_per_gb": 0.02,
          "retrieval_time_hours": 3,
          "request_cost_per_1000": 0.05
        },
        "glacier_deep_archive": {
          "min_days_since_last_access": 365,
          "storage_cost_per_gb": 0.00099,
          "retrieval_cost_per_gb": 0.02,
          "retrieval_time_hours": 12,
          "request_cost_per_1000": 0.05
        }
      },
      "lifecycle_policies": [
        {
          "policy_id": "logs_retention",
          "name": "Application logs lifecycle",
          "filters": {
            "prefixes": ["logs/", "application-logs/"],
            "tags": {"log-type": "application"}
          },
          "transitions": [
            {"days": 30, "tier": "infrequent_access"},
            {"days": 90, "tier": "glacier_instant"},
            {"days": 365, "tier": "glacier_deep_archive"}
          ],
          "expiration_days": 2555
        },
        {
          "policy_id": "backups_retention",
          "name": "Database backups lifecycle",
          "filters": {
            "prefixes": ["backups/database/"],
            "tags": {"backup-type": "database"}
          },
          "transitions": [
            {"days": 7, "tier": "glacier_flexible"},
            {"days": 90, "tier": "glacier_deep_archive"}
          ],
          "expiration_days": 2555
        },
        {
          "policy_id": "temp_data_cleanup",
          "name": "Temporary data cleanup",
          "filters": {
            "prefixes": ["tmp/", "temp/", "cache/"],
            "tags": {"temporary": "true"}
          },
          "transitions": [],
          "expiration_days": 7
        },
        {
          "policy_id": "archive_old_data",
          "name": "Archive old application data",
          "filters": {
            "prefixes": ["data/archive/"],
            "tags": {"archive": "true"}
          },
          "transitions": [
            {"days": 90, "tier": "glacier_flexible"},
            {"days": 730, "tier": "glacier_deep_archive"}
          ],
          "expiration_days": 3650
        }
      ],
      "min_monthly_savings": 25
    },

    "network_optimization": {
      "enabled": true,
      "inter_region": {
        "cost_per_gb": 0.02,
        "min_monthly_gb_threshold": 100,
        "recommendations": [
          "consolidate_to_same_region",
          "implement_regional_caching",
          "use_private_connectivity"
        ]
      },
      "internet_egress": {
        "tier_pricing": [
          {"up_to_gb": 10000, "cost_per_gb": 0.09},
          {"up_to_gb": 50000, "cost_per_gb": 0.085},
          {"up_to_gb": 150000, "cost_per_gb": 0.07},
          {"over_gb": 150000, "cost_per_gb": 0.05}
        ],
        "cdn_threshold_gb": 1000,
        "cdn_cost_per_gb": 0.085,
        "cdn_cache_hit_target": 0.90
      },
      "cross_az": {
        "cost_per_gb": 0.01,
        "min_monthly_cost_threshold": 50,
        "recommendation": "co_locate_resources_same_az"
      },
      "cdn_optimization": {
        "min_cache_hit_ratio": 0.80,
        "target_cache_hit_ratio": 0.90,
        "optimization_techniques": [
          "increase_cache_ttl",
          "optimize_cache_keys",
          "configure_query_string_handling",
          "implement_cache_behaviors",
          "cache_warming"
        ]
      }
    },

    "token_optimization": {
      "enabled": true,
      "analysis_window_days": 30,
      "model_pricing_per_1m_tokens": {
        "gpt-4": {
          "prompt": 30.00,
          "completion": 60.00
        },
        "gpt-4-turbo": {
          "prompt": 10.00,
          "completion": 30.00
        },
        "gpt-3.5-turbo": {
          "prompt": 0.50,
          "completion": 1.50
        },
        "claude-3-opus": {
          "prompt": 15.00,
          "completion": 75.00
        },
        "claude-3-sonnet": {
          "prompt": 3.00,
          "completion": 15.00
        },
        "claude-3-haiku": {
          "prompt": 0.25,
          "completion": 1.25
        },
        "gemini-1.5-pro": {
          "prompt": 3.50,
          "completion": 10.50
        },
        "gemini-1.5-flash": {
          "prompt": 0.075,
          "completion": 0.30
        }
      },
      "optimization_strategies": {
        "model_selection": {
          "enabled": true,
          "simple_task_threshold_tokens": 500,
          "min_savings_percentage": 30,
          "downgrade_candidates": {
            "gpt-4": ["gpt-4-turbo", "gpt-3.5-turbo", "claude-3-sonnet", "claude-3-haiku"],
            "claude-3-opus": ["claude-3-sonnet", "claude-3-haiku"],
            "gpt-4-turbo": ["gpt-3.5-turbo", "claude-3-sonnet"]
          }
        },
        "prompt_optimization": {
          "enabled": true,
          "min_avg_prompt_tokens": 2000,
          "target_reduction_percentage": 20,
          "techniques": [
            "remove_redundant_instructions",
            "condense_examples",
            "remove_unnecessary_context",
            "use_system_message",
            "optimize_formatting"
          ]
        },
        "response_caching": {
          "enabled": true,
          "min_cache_hit_potential": 30,
          "cache_strategy": "semantic_similarity",
          "similarity_threshold": 0.90,
          "cache_ttl_seconds": 3600,
          "cache_size_mb": 1024
        },
        "batch_processing": {
          "enabled": true,
          "min_request_frequency": 100,
          "min_latency_tolerance_seconds": 60,
          "batch_size": 10,
          "expected_savings_percentage": 15
        }
      },
      "token_budgets": {
        "global_monthly": 10000000,
        "by_service": {
          "api_service": {
            "monthly_budget": 5000000,
            "alert_threshold": 0.80,
            "hard_limit": 6000000
          },
          "batch_processing": {
            "monthly_budget": 3000000,
            "alert_threshold": 0.80,
            "hard_limit": 3500000
          },
          "development": {
            "monthly_budget": 2000000,
            "alert_threshold": 0.80,
            "hard_limit": 2500000
          }
        }
      }
    },

    "time_based_scheduling": {
      "enabled": true,
      "strategies": [
        {
          "strategy_id": "off_peak_batch",
          "name": "Off-Peak Batch Processing",
          "applicable_workload_types": ["batch_jobs", "data_processing", "backups", "analytics"],
          "schedule": {
            "weekday_windows": [
              {"start": "22:00", "end": "06:00"}
            ],
            "weekend_windows": [
              {"start": "00:00", "end": "23:59"}
            ],
            "timezone": "UTC"
          },
          "expected_savings_percentage": 40,
          "spot_instance_compatible": true
        },
        {
          "strategy_id": "weekend_scaling",
          "name": "Weekend Scale-Down",
          "applicable_workload_types": ["dev_environments", "test_environments", "internal_tools"],
          "schedule": {
            "weekday": {
              "min_capacity": 10,
              "max_capacity": 100,
              "desired_capacity": 20
            },
            "weekend": {
              "min_capacity": 2,
              "max_capacity": 20,
              "desired_capacity": 5
            }
          },
          "expected_savings_percentage": 25
        },
        {
          "strategy_id": "business_hours_only",
          "name": "Business Hours Only",
          "applicable_workload_types": ["dev_environments", "staging_environments", "demo_environments"],
          "schedule": {
            "enabled_hours": "09:00-18:00",
            "enabled_days": "Monday-Friday",
            "timezone": "America/New_York",
            "auto_start_buffer_minutes": 30,
            "auto_stop_buffer_minutes": 60
          },
          "expected_savings_percentage": 65
        },
        {
          "strategy_id": "dynamic_scaling",
          "name": "Dynamic Time-Based Scaling",
          "applicable_workload_types": ["web_applications", "api_services"],
          "schedule": {
            "peak_hours": {
              "hours": "09:00-17:00",
              "days": "Monday-Friday",
              "capacity_multiplier": 1.5
            },
            "off_peak_hours": {
              "hours": "17:00-09:00",
              "days": "Monday-Friday",
              "capacity_multiplier": 0.5
            },
            "weekend": {
              "capacity_multiplier": 0.3
            }
          },
          "expected_savings_percentage": 30
        }
      ],
      "min_time_flexibility_percentage": 50,
      "min_monthly_savings": 100
    }
  },

  "recommendation_templates": {
    "right_sizing": {
      "title": "Right-size {resource_type}: {resource_name}",
      "description": "Current configuration is over-provisioned. Average {metric} utilization is {avg_utilization}%, well below optimal range of {optimal_min}-{optimal_max}%.",
      "implementation_steps": [
        "Create snapshot/backup of {resource_name}",
        "Schedule maintenance window (estimated downtime: {downtime})",
        "Change {resource_type} from {current_config} to {recommended_config}",
        "Start {resource_type} and verify functionality",
        "Monitor {key_metrics} for {monitoring_period} days",
        "Confirm cost savings in billing dashboard"
      ],
      "validation_criteria": [
        "{metric} utilization remains below {threshold}% at p95",
        "Application performance meets SLA requirements",
        "Error rate remains below {max_error_rate}%",
        "Response time within acceptable range"
      ]
    },

    "idle_resource": {
      "title": "Terminate idle {resource_type}: {resource_name}",
      "description": "Resource has been idle for {idle_days} days with {idle_score}% idle score. No significant activity detected.",
      "implementation_steps": [
        "Verify resource is not required (check with owner: {owner})",
        "Create final snapshot/backup if needed",
        "Document termination reason and date",
        "Terminate resource",
        "Remove from monitoring and inventory",
        "Verify cost reduction in next billing cycle"
      ],
      "validation_criteria": [
        "No dependent services impacted",
        "Owner acknowledges termination",
        "Backup/snapshot created if required",
        "Cost savings reflected in billing"
