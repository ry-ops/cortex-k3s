    "token_optimization": {
      "title": "Optimize {endpoint_name} token usage",
      "description": "Endpoint using {current_model} with average {avg_tokens} tokens per request. {optimization_type} can reduce costs by {savings_percentage}%.",
      "implementation_steps": [
