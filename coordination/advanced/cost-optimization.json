    "network_optimization": {
      "title": "Optimize network traffic: {optimization_type}",
      "description": "Detected {monthly_gb}GB/month of {traffic_type} traffic costing ${current_cost}/month. {recommendation} can reduce costs by {savings_percentage}%.",
      "implementation_steps": [
        "Analyze traffic patterns and sources",
        "Implement {optimization_strategy}",
        "Configure appropriate routing/caching",
        "Test functionality and performance",
        "Monitor traffic and costs for {monitoring_period} days",
        "Fine-tune configuration based on results"
      ],
      "validation_criteria": [
