  "failover_policies": {
    "health_check": {
      "interval_seconds": 30,
      "timeout_seconds": 10,
      "failure_threshold": 3,
      "success_threshold": 2,
      "endpoints": [
        "/health",
        "/api/v1/ping",
        "/coordination/status"
      ],
      "method": "GET",
      "expected_status_codes": [200, 204]
    },
    "automatic_failover": {
      "enabled": true,
      "decision_timeout_seconds": 60,
      "require_manual_approval": false,
      "approval_roles": ["operations_lead", "sre_oncall"],
      "conditions": {
        "health_check_failures": 3,
        "error_rate_threshold": 0.10,
        "latency_p99_threshold_ms": 5000,
        "available_capacity_threshold": 0.20,
        "consecutive_failures_required": true
      }
    },
    "failover_sequence": [
      {
        "step": "detection",
        "order": 1,
        "timeout_seconds": 30,
        "actions": [
          "verify_failure",
          "assess_impact",
          "notify_operators",
          "create_incident"
        ],
        "parallel_execution": true
      },
      {
        "step": "preparation",
        "order": 2,
        "timeout_seconds": 60,
        "actions": [
          "identify_target_region",
          "verify_target_capacity",
          "prepare_data_sync",
          "update_monitoring"
        ],
        "dependencies": ["detection"]
      },
      {
        "step": "execution",
        "order": 3,
        "timeout_seconds": 300,
        "actions": [
          "drain_connections",
          "sync_critical_state",
          "update_dns_routing",
          "redirect_traffic",
          "migrate_workloads"
        ],
        "dependencies": ["preparation"]
      },
      {
        "step": "validation",
        "order": 4,
        "timeout_seconds": 120,
        "actions": [
          "verify_health",
          "validate_functionality",
          "monitor_metrics",
          "test_critical_paths"
        ],
        "dependencies": ["execution"]
      },
      {
        "step": "stabilization",
        "order": 5,
        "timeout_seconds": 300,
        "actions": [
          "monitor_performance",
          "adjust_resources",
          "update_dashboards",
          "notify_completion"
        ],
        "dependencies": ["validation"]
      }
    ],
    "rollback_criteria": {
      "target_region_failure": true,
      "data_sync_failure": true,
      "validation_failure": true,
      "operator_intervention": true,
      "error_rate_spike": true,
      "customer_impact_threshold": 0.05
    },
    "rollback_timeout_seconds": 600
  },
  "replication_strategies": {
    "synchronous": {
      "description": "Real-time replication with strong consistency",
      "enabled": true,
      "target_latency_ms": 100,
      "consistency": "strong",
      "data_types": [
        "master_state",
        "active_tasks",
        "worker_assignments",
        "routing_tables",
        "critical_configuration"
      ],
      "replication_flow": {
        "write_to_primary": true,
        "wait_for_replicas": "majority",
        "min_replicas_ack": 2,
        "timeout_ms": 500,
        "on_timeout": "fail_write",
        "retry_policy": {
          "enabled": false
        }
      },
      "conflict_resolution": "primary_wins",
      "monitoring": {
        "lag_alert_threshold_ms": 200,
        "failure_alert_enabled": true
      }
    },
    "asynchronous": {
      "description": "Background replication with eventual consistency",
      "enabled": true,
      "target_latency_ms": 5000,
      "consistency": "eventual",
      "data_types": [
        "logs",
        "metrics",
        "analytics",
        "audit_trails",
        "historical_data"
      ],
      "replication_flow": {
        "write_to_primary": true,
        "wait_for_replicas": "none",
        "batch_size": 1000,
        "batch_interval_seconds": 10,
        "compression": true,
        "retry_policy": {
          "enabled": true,
          "max_retries": 3,
          "backoff": "exponential",
          "initial_backoff_seconds": 5,
          "max_backoff_seconds": 300,
          "backoff_multiplier": 2
        }
      },
      "conflict_resolution": "last_write_wins",
      "monitoring": {
        "lag_alert_threshold_seconds": 60,
        "backlog_alert_threshold": 10000
      }
    },
    "selective": {
      "description": "Policy-based replication for specific data",
      "enabled": true,
      "consistency": "custom",
      "policies": [
        {
          "policy_id": "knowledge_base_replication",
          "description": "Replicate knowledge bases across all regions",
          "data_pattern": "coordination/*/knowledge-base/*",
          "replication_trigger": "on_update",
          "target_regions": ["all"],
          "compression": true,
          "encryption": true,
          "priority": "high",
          "max_latency_seconds": 60
        },
        {
          "policy_id": "compliance_data_replication",
          "description": "Replicate compliance data with strict retention",
          "data_pattern": "coordination/compliance/*",
          "replication_trigger": "on_create",
          "target_regions": ["same_jurisdiction"],
          "retention_days": 2555,
          "immutable": true,
          "encryption": "aes-256-gcm",
          "audit_logging": true
        },
        {
          "policy_id": "worker_state_replication",
          "description": "Replicate worker state for recovery",
          "data_pattern": "coordination/workers/*/state.json",
          "replication_trigger": "on_update",
          "target_regions": ["primary", "secondary"],
          "compression": true,
          "max_latency_seconds": 30
        },
        {
          "policy_id": "archive_replication",
          "description": "Replicate archives to cold storage regions",
          "data_pattern": "coordination/archives/*",
          "replication_trigger": "scheduled",
          "schedule": "0 3 * * *",
          "target_regions": ["tertiary"],
          "compression": true,
          "storage_class": "glacier"
        }
      ]
    }
  },
