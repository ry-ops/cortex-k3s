  "pattern_id": "proxmox-vm-provisioning-best-practice",
  "contractor": "infrastructure-contractor",
  "category": "performance",
  "pattern": {
    "summary": "Use VM templates + cloud-init for fastest provisioning",
    "context": {
      "task_types": ["vm_provisioning", "infrastructure_scaling"],
      "conditions": [
        "Need to provision VM quickly (<2 minutes)",
        "VM template exists for desired OS",
        "Cloud-init supported"
      ]
    },
    "recommendation": {
      "action": "clone_template_with_cloudinit",
      "parameters": {
        "method": "full_clone",
        "template_id": "use_latest_base_template",
        "cloud_init_config": {
          "user_data": "configure_ssh_keys_and_hostname",
          "network_config": "dhcp_with_static_fallback"
        },
        "start_immediately": true
      },
      "rationale": "Cloning from template is 10x faster than ISO install. Cloud-init automates initial configuration, eliminating manual setup. Full clone (not linked) prevents template dependency issues."
    },
    "evidence": {
      "sample_size": 156,
      "success_rate": 0.97,
      "metrics": {
        "avg_provision_time_template_clone": "90s",
        "avg_provision_time_iso_install": "900s",
        "clone_failure_rate": 0.03,
        "iso_failure_rate": 0.12
      }
    }
  },
