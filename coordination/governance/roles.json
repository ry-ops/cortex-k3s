{
  "version": "1.0.0",
  "description": "Unified role-based access control for cortex AI system. Inspired by Amgen (120 roles -> 1-2 principal roles).",
  "created_at": "2025-11-11T00:00:00Z",
  "roles": [
    {
      "role_id": "system-admin",
      "description": "Full system access for administrative operations",
      "permissions": ["read", "write", "execute", "admin"],
      "scope": "global",
      "can_modify": ["metastore", "global_policies", "roles", "access_logs", "all_assets"],
      "can_assign_roles": true,
      "restrictions": {
        "requires_audit": true,
        "requires_justification": true
      },
      "priority": 0
    },
    {
      "role_id": "agent-operator",
      "description": "Standard agent operations - default role for all masters and workers",
      "permissions": ["read", "write", "execute"],
      "scope": "namespace",
      "can_modify": ["tasks", "worker_specs", "events", "logs", "knowledge_bases", "coordination_files"],
      "can_assign_roles": false,
      "restrictions": {
        "cannot_modify": ["metastore", "global_policies", "roles", "access_logs"],
        "requires_approval_for": ["sensitive_data_access", "pii_data"],
        "rate_limits": {
          "reads_per_minute": 1000,
          "writes_per_minute": 100
        }
      },
      "priority": 1
    },
    {
      "role_id": "observer",
      "description": "Read-only monitoring and auditing access",
      "permissions": ["read"],
      "scope": "global",
      "can_modify": [],
      "can_assign_roles": false,
      "restrictions": {
        "cannot_read": ["pii_data", "sensitive_credentials"],
        "rate_limits": {
          "reads_per_minute": 500
        }
      },
      "priority": 2
    }
  ],
  "default_role": "agent-operator",
  "role_assignments": {
    "coordinator-master": "agent-operator",
    "development-master": "agent-operator",
    "security-master": "agent-operator",
    "cicd-master": "agent-operator",
    "inventory-master": "agent-operator",
    "testing-master": "agent-operator",
    "monitoring-master": "agent-operator",
    "create-task-cli": "agent-operator",
    "system": "system-admin",
    "human-operator": "system-admin"
  },
  "audit_config": {
    "log_all_access": true,
    "log_path": "coordination/governance/access-log.jsonl",
    "retention_days": 90,
    "alert_on_denied": true
  }
}
